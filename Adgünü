    <script>
        lucide.createIcons();
        const audio = document.getElementById('tudum-audio');

        function startOmerflix() {
            // Try to play sound immediately
            audio.currentTime = 0;
            audio.play().catch(e => console.log("Audio waiting for user gesture..."));

            document.getElementById('profile-selection').style.opacity = '0';
            
            setTimeout(() => {
                document.getElementById('profile-selection').style.display = 'none';
                document.getElementById('brand-intro').style.display = 'flex';
                
                setTimeout(() => {
                    document.getElementById('brand-intro').style.display = 'none';
                    document.getElementById('main-browse').style.display = 'block';
                }, 3000);
            }, 500);
        }

        function triggerIntro() {
            // Play sound again on trigger
            audio.currentTime = 0;
            audio.play();

            const overlay = document.getElementById('star-wars-overlay');
            overlay.style.display = 'block';
            
            const crawlText = document.querySelector('.crawl-text');
            crawlText.style.animation = 'none';
            crawlText.offsetHeight; // force reflow
            crawlText.style.animation = 'slowSpaceCrawl 50s linear forwards';
        }

        function closeIntro() {
            document.getElementById('star-wars-overlay').style.display = 'none';
        }

        // Nav Scroll effect
        const nav = document.getElementById('nav');
        document.getElementById('main-browse').addEventListener('scroll', function() {
            if (this.scrollTop > 50) {
                nav.style.backgroundColor = 'rgba(20, 20, 20, 0.9)';
            } else {
                nav.style.backgroundColor = 'transparent';
            }
        });
    </script>
